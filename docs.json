{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Boundless",
  "colors": {
    "primary": "#16A34A",
    "light": "#AED8C4",
    "dark": "#16A34A"
  },
  "appearance": {
    "default": "system",
    "strict": false
  },
  "background": {
    "color": {
      "light": "#EFECE3",
      "dark": "#1e1d1f"
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": {
    "light": "/logo/favicon.svg",
    "dark": "/logo/favicon-dark.svg"
  },
  "fonts": {
    "heading": {
      "family": "Self Modern",
      "source": "/fonts/SelfModernSemiBold.woff2",
      "format": "woff2",
      "weight": 700
    },
    "body": {
      "family": "Replica",
      "source": "/fonts/ReplicaRegular.woff2",
      "format": "woff2",
      "weight": 400
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Explorer",
        "href": "https://explorer.boundless.network/orders",
        "icon": "magnifying-glass-arrow-right"
      },
      {
        "label": "Support Forum",
        "href": "https://github.com/boundless-xyz/boundless/discussions",
        "icon": "circle-question"
      },
      {
        "label": "GitHub",
        "href": "https://github.com/boundless-xyz/boundless",
        "icon": "github"
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/boundless_xyz",
      "github": "https://github.com/boundless-xyz",
      "discord": "https://discord.com/invite/boundlessxyz"
    }
  },
  "interaction": {
    "drilldown": true
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/developers/quick-start"
    }
  ],
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Latest Release Notes",
          "icon": "notes",
          "href": "https://github.com/boundless-xyz/boundless/releases"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Build",
        "groups": [
          {
            "group": " ",
            "pages": [
              "developers/quick-start"
            ]
          },
          {
            "group": "Introduction",
            "icon": "book-open",
            "pages": [
              "developers/what",
              "developers/why",
              "developers/proof-lifecycle"
            ]
          },
          {
            "group": "Core Concepts",
            "icon": "cube",
            "pages": [
              "developers/tutorials/build",
              "developers/tutorials/auction",
              "developers/tutorials/request",
              "developers/tutorials/tracking",
              "developers/tutorials/use",
              "developers/tutorials/troubleshooting"
            ]
          },
          {
            "group": "Tooling",
            "icon": "wrench",
            "pages": [
              "developers/tooling/sdk",
              "developers/tooling/cli"
            ]
          },
          {
            "group": "Tutorials",
            "icon": "graduation-cap",
            "pages": [
              "developers/tutorials/callbacks",
              "developers/tutorials/proof-composition",
              "developers/tutorials/proof-types",
              "developers/tutorials/bonsai",
              "developers/tutorials/sensitive-inputs",
              "developers/tutorials/smart-contract-requestor"
            ]
          },
          {
            "group": "Smart Contracts",
            "icon": "file-contract",
            "pages": [
              "developers/smart-contracts/deployments",
              "developers/smart-contracts/verifier-contracts"
            ]
          },
          {
            "group": "Steel",
            "icon": "shield",
            "pages": [
              "developers/steel/quick-start",
              "developers/steel/what-is-steel",
              "developers/steel/how-it-works",
              "developers/steel/commitments",
              "developers/steel/history",
              "developers/steel/events"
            ]
          },
          {
            "group": "Kailua",
            "icon": "water",
            "pages": [
              "developers/kailua/github",
              "developers/kailua/book"
            ]
          }
        ]
      },
      {
        "tab": "Prove",
        "groups": [
          {
            "group": " ",
            "pages": [
              "provers/quick-start"
            ]
          },
          {
            "group": "Core Concepts",
            "icon": "gear",
            "pages": [
              "provers/proving-stack",
              "provers/broker",
              "provers/monitoring",
              "provers/performance-optimization",
              "provers/bento"
            ]
          },
          {
            "group": "$ZKC Overview",
            "icon": "coins",
            "pages": [
              "zkc/quick-start",
              "zkc/collateral"
            ]
          },
          {
            "group": "ZK Mining",
            "icon": "pickaxe",
            "pages": [
              "zkc/mining/overview",
              "zkc/mining/wallet-setup",
              "zkc/mining/enable",
              "zkc/mining/walkthrough",
              "zkc/mining/claiming-rewards"
            ]
          }
        ]
      },
      {
        "tab": "Governance",
        "groups": [
          {
            "group": " ",
            "pages": [
              "governance/introduction"
            ]
          }
        ]
      }
    ]
  }
}
