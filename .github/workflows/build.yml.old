name: build docs
on: 
  workflow_call:

env:
  BUN_VERSION: 1.3.0
  NODE_VERSION: 24
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      ## SETUP DEPENDENCIES
      - name: Checkout latest commit
        uses: actions/checkout@v5

      - name: Setup Node
        uses: actions/setup-node@v6
        with:
          node-version: ${{ env.NODE_VERSION }}

      - name: Setup Bun
        uses: oven-sh/setup-bun@v2
        with: 
          bun-version: 1.3.0

      - name: Install dependencies 
        run: bun install

      ## BUILD DOCS 
      - name: Build docs
        run: bunx vocs build

      ## UPLOAD STATIC DOCS TO STORAGE TO USE IN TEST/DEPLOY.YML
      - name: Upload docs to GH storage
        uses: actions/upload-artifact@v4
        with:
          path: src/dist



      
